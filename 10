/* Filename: count.l */

%{
#include <stdio.h>

int char_count = 0;
int line_count = 0;
int word_count = 0;
%}

%option noyywrap

%%
\n              { line_count++; char_count++; }      /* count newline as a character */
[ \t]+          { char_count += yyleng; }           /* spaces/tabs are only characters */
[A-Za-z0-9_]+   { word_count++; char_count += yyleng; }  /* words */
.               { char_count++; }                   /* everything else (symbols, etc.) */
%%

int main(int argc, char *argv[]) {
    if (argc > 1) {
        FILE *fp = fopen(argv[1], "r");
        if (!fp) {
            printf("Could not open file %s\n", argv[1]);
            return 1;
        }
        yyin = fp;
    }
    yylex();
    printf("Number of characters: %d\n", char_count);
    printf("Number of words: %d\n", word_count);
    printf("Number of lines: %d\n", line_count);
    return 0;
}
